{
    "compileOnSave": true,
    "compilerOptions": {
        "esModuleInterop": true,
        "noEmitOnError": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "target": "ES2020",
        "lib": ["ES2018", "DOM"],
        "declaration": true,
        "declarationMap": false,
        "declarationDir": "dist",
        "sourceMap": true,
        "rootDirs": ["src"],
        "outDir": "dist",
        "baseUrl": "./src",
        "strict": true,
        "types": ["node"]
    },
    "include": ["src/**/*.ts", "src/**/*.json", "index.ts"],
    "exclude": ["node_modules", "tsconfig.json"],
    "types": ["node", "express", "cors", "jest"]
}
